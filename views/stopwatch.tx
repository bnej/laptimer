: cascade layouts::main
: around js_head {
<script src="<: $request.uri_base :>/javascripts/stopwatch.js"></script>
: }
: around body {

<div class="container-fluid topbar">
  <div class="row">
    <div class="col-xl-12">
      <h2><: $event_info.club_name :></h1>
      <h3>Timing: <: $event_info.event_name :></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6" id="timer-current">
      
    </div>
    <div class="col-md-3">
    </div>
  </div>
  
  <div class="row">
    <div class="col-6">
      <button type="button"
	      class="btn btn-success btn-lg btn-block"
	      id="start-stop"
	      onclick="start_stop($('#start-stop'));">Start</button>
    </div>
    <div class="col-6">
      <button type="button"
	      class="btn btn-primary btn-lg btn-block"
	      id="mark-time"
	      onclick="mark();">Mark</button>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <table class="table" id="mark-table">
	<thead class="thead-light">
	  <tr>
	    <th scope="col" style="width: 40px;">#</th>
	    <th scope="col">Mark</th>
	  </tr>
	</thead>
	<tbody>
	  <tr></tr>
	</tbody>
      </table>
    </div>
  </div>
  
</div>

<script>
var baseurl = '<: $baseurl :>';
$('#timer-current').text( ms_format( 0, 0 ) );
load_marks();
</script>
: }
